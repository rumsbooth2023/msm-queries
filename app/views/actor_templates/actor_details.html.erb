<h1> Actor #<%= @details.id %> details </h1>

<a href="/actors">
  Go back
</a>
<hr>

<dl>
  <dt> Name </dt>
  <dd>
    <%= @details.name %>
  </dd>

  <dt> Dob </dt>
  <dd>
    <%= @details.dob %>
  </dd>

  <dt> Bio </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt> Image </dt>
  <dd>
    <img src= "<%= @details.image %>" style="width:250px;">
  </dd>

  <dt> Created at </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %>
  </dd>

  <dt> Updated at </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %>
  </dd>
</dl>

<hr>

<table border="1">
<th> Title </th>
<th> Year </th>
<th> Director </th>
<th> Character Name </th>
<th> Details </th>
<%= @characters.all.each do |a_thing| %>
<tr>
  <td>
    <% a = a_thing.movie_id%>
    <%= Movie.where({ :id => a}).at(0).title%>
  </td>
  <td>
    <% b = a_thing.movie_id%>
    <%= Movie.where({ :id => a}).at(0).year%>
  </td>
  <td>
    <% d = a_thing.movie_id %>
    <%= Director.where({ :id => d}).at(0).name %>
  </td>
  <td>
    <%= a_thing.name %>
  </td>

  <td>
    <a href = "/movies/<%= a_thing.movie_id%>">
    Show Details
    </a>
  </td>
</tr
<% end %>
</table>
