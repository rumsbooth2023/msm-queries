<h1> Actor #<%= @details.id %> details </h1>

<a href="/actors">
  Go back
</a>
<hr>

<dl>
  <dt> Name </dt>
  <dd>
    <%= @details.name %>
  </dd>

  <dt> Dob </dt>
  <dd>
    <%= @details.dob %>
  </dd>

  <dt> Bio </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt> Image </dt>
  <dd>
    <img src= "<%= @details.image %>" style="width:250px;">
  </dd>

  <dt> Created at </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %>
  </dd>

  <dt> Updated at </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %>
  </dd>
</dl>

<hr>
