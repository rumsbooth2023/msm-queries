<h1> List of all movies </h1>

<table border="1">
<th> ID </th>
<th> Image </th>
<th> Title </th>
<th> Year </th>
<th> Director </th>
<th> Bio </th>
<%= Movie.all.each do |a_thing| %>
<tr>
  <td><%= a_thing.id%></td>
  <td><img src = "<%= a_thing.image%>"></td>
  <td><%= a_thing.title%></td>
  <td><%= a_thing.year%></td>
  <td>
    <% d = a_thing.director_id %>
    <%= Director.where({ :id => d}).at(0).name %>
  </td>
  <td>
    <a href = "/movies/<%= a_thing.id%>">
    Show Details
    </a>
  </td>
</tr
<% end %>
</table>
