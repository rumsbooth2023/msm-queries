<h1> Director #<%= @details.id %> details </h1>

<a href="/directors">
  Go back
</a>
<hr>

<dl>
  <dt> Name </dt>
  <dd>
    <%= @details.name %>
  </dd>

  <dt> Dob </dt>
  <dd>
    <%= @details.dob %>
  </dd>

  <dt> Bio </dt>
  <dd>
    <%= @details.bio %>
  </dd>

  <dt> Image </dt>
  <dd>
    <img src= "<%= @details.image %>" style="width:250px;">
  </dd>

  <dt> Created at </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %>
  </dd>

  <dt> Updated at </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %>
  </dd>
</dl>

<hr>

<hr>

<h2>Filmography</h2>

<table border="1">
<th> ID </th>
<th> Image </th>
<th> Title </th>
<th> Year </th>
<th> Director </th>
<th> Bio </th>
<%= @filmography.all.each do |a_thing| %>
<tr>
  <td><%= a_thing.id%></td>
  <td><img src = "<%= a_thing.image%>"></td>
  <td><%= a_thing.title%></td>
  <td><%= a_thing.year%></td>
  <td><%= a_thing.director_id%></td>
  <td>
    <a href = "/movies/<%= a_thing.id%>">
    Show Details
    </a>
  </td>
</tr
<% end %>
</table>
